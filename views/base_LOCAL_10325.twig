

<!DOCTYPE html>
<html {{ site.language_attributes }} class="no-js">
<head>
    <meta charset="{{ site.charset }}"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">
    <link rel="pingback" href="{{ site.pingback_url }}"/>
    {{ theme.get_favicon() }}
    {{ fn('wp_head') }}
    {% block header %}{% endblock %}
</head>

{% do action('meerkat_body_begin') %}

    <body class="{{ body_class }} twig-{{ page }}">
        
        <noscript>
        <!-- Google Tag Manager (noscript) -->
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KWHWG4B"
        height="0" width="0" style="display:none;visibility:hidden"></iframe>
        <!-- End Google Tag Manager (noscript) -->
        </noscript>

        <div class="page">
            {% include 'modules/site_header.twig' %}

            <div class="site-content">
                <div class="wms-cols content-wrap">
                    {# left/top sidebar #}
                    {% include 'temp/navigation.twig' %}

                    <main id="content" class="w-3/5">
                        {# start the loop #}
                        {% block content %}{% endblock %}
                    </main>

                    {# right/bottom sidebar #}
                    {% include 'temp/aside.twig' %}
                </div>
            </div>

            {% include 'modules/site_footer.twig' %}
        </div>

        {{ wp_footer }}

    </body>
</html>
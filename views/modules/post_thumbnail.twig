{% if post.get_thumbnail %}
    {% if not size %}
            {% set size = 'thumbnail' %}
    {% endif %}
    <figure class="post-thumbnail">
        <img id="post-thumbnail-{{post.thumbnail.id}}" alt="{{ post.thumbnail.alt }}"
                src="{{ post.thumbnail.src(size) | tojpg }}"
                srcset="{{ post.thumbnail.src(size) | tojpg | retina(1) }} 1x,
                {{ post.thumbnail.src(size) | tojpg | retina(2) }}  2x,
                {{ post.thumbnail.src(size) | tojpg | retina(3) }}  3x,
                {{ post.thumbnail.src(size) | tojpg | retina(4) }}  4x">
    </figure>
{% endif %}
